{
  "name": "@deepguide-ai/dg",
  "version": "3.0.5",
  "type": "module",
  "description": "Self-testing CLI documentation tool that generates interactive terminal demos",
  "license": "MIT",
  "author": "DeepGuide.ai",
  "bin": {
    "dg": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "install.sh",
    "scripts"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "dev": "ts-node-esm src/index.ts",
    "prepublishOnly": "npm run clean && npm run build",
    "postinstall": "node scripts/postinstall.js",
    "release": "npm run build && npm version patch && git push --follow-tags",
    "release:minor": "npm run build && npm version minor && git push --follow-tags",
    "release:major": "npm run build && npm version major && git push --follow-tags"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "commander": "^14.0.0",
    "node-pty": "^1.0.0",
    "winston": "^3.17.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/node": "^24.0.7",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "pkg": {
    "targets": [
      "node18-linux-x64",
      "node18-macos-x64",
      "node18-macos-arm64",
      "node18-win-x64"
    ],
    "outputPath": "dist"
  },
  "keywords": [
    "cli",
    "documentation",
    "terminal",
    "asciinema",
    "demos",
    "self-testing"
  ],
  "homepage": "https://github.com/DeepGuide-Ai/dg",
  "repository": {
    "type": "git",
    "url": "https://github.com/DeepGuide-Ai/dg.git"
  },
  "bugs": {
    "url": "https://github.com/DeepGuide-Ai/dg/issues"
  }
}
